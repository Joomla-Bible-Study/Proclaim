<?xml version="1.0" encoding="utf-8"?>
<server type="storage" supports="*.*">
    <name>Amazon S3</name>
    <description>Establish connections to AmazonS3 cloud storage services. An S3 account is required to connect to this
        server type.
    </description>

    <fields name="params">
        <fieldset name="Server" label="JBS_ADDON_AMAZONS3_DETAILS">
            <field name="key" type="text" inputclass="input-medium" label="*AWS_KEY*" description="*AWS_KEY*"/>
            <field name="secret" type="text" labelclass="control-label" label="*AWS_SECRET*"
                   description="*AWS_SECRET*"/>
        </fieldset>
    </fields>
    <fields name="media">
    </fields>
</server>
