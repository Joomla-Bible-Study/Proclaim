<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset addfieldprefix="CWM\Component\Proclaim\Administrator\Field">
        <fields name="filter">
            <field
                    name="search"
                    type="text"
                    label="JBS_CMN_FILTER_SEARCH_DESC"
                    hint="JSEARCH_FILTER"
            />

            <field name="se.tid"
                   type="TeacherList"
                   label="JBS_CMN_FILTERS_TEACHER"
                   description="JBS_CMN_FILTERS_DESC"
                   multiple="true"
                   default="-1"
            >
                <option value="-1">JBS_CMN_SHOW_ALL</option>
            </field>
            <field
                    name="language"
                    type="contentlanguage"
                    label="JOPTION_FILTER_LANGUAGE"
                    description="JOPTION_FILTER_LANGUAGE_DESC"
                    onchange="this.form.submit();"
            >
                <option value="">JOPTION_SELECT_LANGUAGE</option>
                <option value="*">JALL</option>
            </field>
        </fields>
    </fieldset>
    <fields name="list">
        <field name="order"
               type="list"
               label="JBS_CMN_ORDERING"
               description="JBS_CMN_ORDERING_DESC"
               default="">
            <option value="">JBS_CMN_USE_GLOBAL</option>
            <option value="1">JBS_CMN_DESCENDING</option>
            <option value="2">JBS_CMN_ASCENDING</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>
