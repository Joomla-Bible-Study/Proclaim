<metadata>
	<layout title="JBS_MNU_TEACHERS_LIST_LAYOUT">
		<message>
			<![CDATA[JBS_MNU_TEACHERS_LIST_LAYOUT_DESC]]>
		</message>
	</layout>
	<fields name="request" addfieldprefix="CWM\Component\Proclaim\Administrator\Field">
		<fieldset name="request">
			<field name="t" type="sql"
			       description="JBS_MNU_SELECT_TEMPLATE_DESC"
			       label="JBS_MNU_SELECT_TEMPLATE"
			       default="1"
			       query="SELECT id, title FROM #__bsms_templates WHERE published = 1 ORDER BY text ASC"
			       key_field="id"
			       value_field="title"
			       required="true"
			/>
		</fieldset>
	</fields>
	<fields name="params">
